<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :level %>
    <%= form.select :level, ['0', '1', '2'], prompt: t('.select_level') %>
  </p>
  <p>
    <%= form.label :category %>
    <%= form.select :category_id, options_from_collection_for_select(Category.all, 'id', 'title'), prompt: true %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>