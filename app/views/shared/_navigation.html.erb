<nav class='navbar navbar-light bg-light'>
  <%= link_to 'Test Guru Project', root_path, class: 'navbar-brand' %>
    <span class="navbar-text">
      <% if user_signed_in? %>
        <span class="mr-2 mt-n1">
          <%= render inline: show_user_badges %>
        </span>        
        Welcome, <b><%= current_user.email %></b> Guru!
        <div class="btn-group ml-3">
            <button class="btn btn-secondary btn-md button-fix-width dropdown-toggle pt-1 pb-1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              User Menu
            </button>
            <div class="dropdown-menu dropdown-menu-right user-dropdown-menu pt-1 pb-1">
              <% if current_user.admin? %>
                <%= link_to 'Admin Panel', admin_tests_path, class: "dropdown-item", style: "text-align : center" %>
              <% end %>
              <%= link_to 'Badges', badges_path, class: "dropdown-item", style: "text-align : center" %>
              <%= link_to 'Exit',
                    destroy_user_session_path,
                    method: :delete,
                    data: { confirm: 'Are you sure?'},
                    class: "dropdown-item",
                    style: "text-align : center" %>
            </div>
          </div>
      <% else %>
        <%= link_to 'Sign up', new_user_registration_path %> | 
        <%= link_to 'Log in', new_user_session_path %>
      <% end %>
    </span>
</nav>


