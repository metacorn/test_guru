<%= form_for @feedback, url: feedback_path,
                        remote: true do |f| %>
  <div class="p-0 m-0 col-md-6">
    <%= f.label :name, class: "mb-0" %></br>
    <%= f.text_field  :name,  required: true,
                              class: "" %></br>

    <%= f.label :email, class: "mb-0 mt-2" %></br>
    <%= f.text_field :email,  required: true,
                              class: "contact-form-text-area" %></br>

    <%= f.label :message, class: "mb-0 mt-2" %></br>
    <%= f.text_area :message, rows: 8,
                              cols: 40,
                              required: true,
                              class: "contact-form-text-area",
                              placeholder: "Leave a message" %></br>

    <%= f.submit t('.leave'), class: 'btn btn-primary' %>
  </div>
<% end %>